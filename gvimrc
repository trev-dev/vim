# GUI Settings

## No menubar, tab bar, scroll bars and prefer dark mode
set guioptions-=m
set guioptions-=T
set guioptions-=r
set guioptions-=L
set guioptions+=d
set guifont=FiraCode\ Nerd\ Font\ Mono\ 12
set guiligatures=!\"#$%&()*+-./:<=>?@[]^_{\|~

if has('win32')
  set renderoptions=type:directx
endif

